<div class="banner d-flex align-items-center justify-content-center" style="background-image: linear-gradient(rgba(33,37,41,0.0),rgba(33,37,41,1)), url(https://wallpapercave.com/wp/wp4016023.jpg); background-position: center;">
  <div class="container text-center">
    <h1>Create a Bookmark</h1>
  </div>
</div>

<div class="container col-6 mt-5">
<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :movie_id, collection: Movie.all %>
  <%= f.input :comment %>
  <%= link_to "Back", list_path(@list), class: "btn btn-primary"%>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
</div>
