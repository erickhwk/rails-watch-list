<div class="banner d-flex align-items-center justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536440136628-849c177e76a1);">
  <div class="container text-center">
    <h1>My <strong>must watch</strong> movies list!</h1>
    <%= link_to 'Create a New List', new_list_path, class: 'btn btn-primary mt-3' %>
  </div>
</div>

<div class="container mt-5">
  <h2>My lists</h2>
  <div class="cards mt-3">
  <% @lists.each do |list| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.screenspy.com/wp-content/uploads/2018/09/228236223-horror-movie-icons-wallpaper.jpg)">
  <%= link_to list.name, list_path(list) %>
  </div>
  <% end %>
</div>
